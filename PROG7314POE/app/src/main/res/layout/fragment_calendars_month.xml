<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    android:padding="@dimen/pad_screen"
    tools:context=".ui.placeholders.CalendarsFragment">

    <!-- HEADER: month nav and source pickers -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/space_3">

        <ImageButton
            android:id="@+id/btnPrev"
            android:layout_width="@dimen/touch_target"
            android:layout_height="@dimen/touch_target"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Previous month"
            android:tint="?attr/colorOnBackground"
            android:src="@android:drawable/ic_media_previous" />

        <TextView
            android:id="@+id/txtMonth"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="October 2025"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:textColor="?attr/colorOnBackground" />

        <ImageButton
            android:id="@+id/btnNext"
            android:layout_width="@dimen/touch_target"
            android:layout_height="@dimen/touch_target"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Next month"
            android:tint="?attr/colorOnBackground"
            android:src="@android:drawable/ic_media_next" />
    </LinearLayout>

    <!-- SOURCE BUTTONS -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="@dimen/space_4">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPickSingle"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="@dimen/touch_target"
            android:text="Pick single"
            app:cornerRadius="@dimen/radius_m"
            app:strokeColor="?attr/colorOutline"
            app:strokeWidth="1dp"
            app:backgroundTint="?attr/colorSurface"
            android:textColor="?attr/colorOnSurface" />

        <Space
            android:layout_width="@dimen/space_2"
            android:layout_height="1dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPickFromDashboard"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="@dimen/touch_target"
            android:text="Pick from dashboard"
            app:cornerRadius="@dimen/radius_m"
            app:strokeColor="?attr/colorOutline"
            app:strokeWidth="1dp"
            app:backgroundTint="?attr/colorSurface"
            android:textColor="?attr/colorOnSurface" />
    </LinearLayout>

    <!-- DAY OF WEEK LABELS -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/space_2"
        android:paddingBottom="@dimen/space_2"
        android:gravity="center">

        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center" android:text="Sun" android:textColor="?attr/colorOnBackground" />
        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center" android:text="Mon" android:textColor="?attr/colorOnBackground" />
        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center" android:text="Tue" android:textColor="?attr/colorOnBackground" />
        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center" android:text="Wed" android:textColor="?attr/colorOnBackground" />
        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center" android:text="Thu" android:textColor="?attr/colorOnBackground" />
        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center" android:text="Fri" android:textColor="?attr/colorOnBackground" />
        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center" android:text="Sat" android:textColor="?attr/colorOnBackground" />
    </LinearLayout>

    <!-- MONTH GRID -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/calendarGrid"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- DAY CARD -->
    <LinearLayout
        android:id="@+id/dayCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/space_4"
        android:layout_marginBottom="@dimen/space_6"
        android:paddingLeft="@dimen/pad_card"
        android:paddingRight="@dimen/pad_card"
        android:paddingTop="@dimen/space_3"
        android:paddingBottom="@dimen/space_4"
        android:background="@drawable/bg_daycard"
        tools:visibility="visible">

        <TextView
            android:id="@+id/dayCardTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wed, 08 Oct"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:textColor="#1A2A46" />

        <TextView
            android:id="@+id/emptyDayText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No events"
            android:textColor="#1A2A46"
            android:paddingTop="@dimen/space_2" />

        <LinearLayout
            android:id="@+id/dayCardList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </LinearLayout>

</LinearLayout>
