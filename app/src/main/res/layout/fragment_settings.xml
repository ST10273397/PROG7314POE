<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/pad_screen">

        <!-- TITLE -->
        <TextView
            android:id="@+id/titleSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:textColor="?attr/colorOnBackground"
            android:paddingBottom="@dimen/space_4"/>

        <!-- THEME CARD -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_4"
            app:cardBackgroundColor="?attr/colorSurface"
            app:cardUseCompatPadding="true"
            app:strokeColor="?attr/colorOutline"
            app:strokeWidth="1dp"
            app:shapeAppearanceOverlay="@style/Shape.Rounded.Medium">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/pad_card">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Appearance"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="18sp"
                    android:paddingBottom="@dimen/space_2"/>

                <com.google.android.material.materialswitch.MaterialSwitch
                    android:id="@+id/switchDark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dark mode"
                    android:textColor="?attr/colorOnSurface"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ACCOUNT CARD -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_4"
            app:cardBackgroundColor="?attr/colorSurface"
            app:cardUseCompatPadding="true"
            app:strokeColor="?attr/colorOutline"
            app:strokeWidth="1dp"
            app:shapeAppearanceOverlay="@style/Shape.Rounded.Medium">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/pad_card">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Account"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="18sp"
                    android:paddingBottom="@dimen/space_2"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnChangePassword"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/touch_target"
                    android:text="Change password"
                    app:cornerRadius="@dimen/radius_m"
                    app:strokeColor="?attr/colorOutline"
                    app:strokeWidth="1dp"
                    app:backgroundTint="?attr/colorSurface"
                    android:textColor="?attr/colorOnSurface"/>

                <Space
                    android:layout_width="1dp"
                    android:layout_height="@dimen/space_2"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnLogout"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/touch_target"
                    android:text="Log out"
                    app:cornerRadius="@dimen/radius_m"
                    app:backgroundTint="?attr/colorPrimary"
                    android:textColor="?attr/colorOnPrimary"/>

                <Space
                    android:layout_width="1dp"
                    android:layout_height="@dimen/space_2"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDeleteAccount"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/touch_target"
                    android:text="Delete account"
                    app:cornerRadius="@dimen/radius_m"
                    app:backgroundTint="?attr/colorError"
                    android:textColor="@android:color/white"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- FUTURE CARD -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="?attr/colorSurface"
            app:cardUseCompatPadding="true"
            app:strokeColor="?attr/colorOutline"
            app:strokeWidth="1dp"
            app:shapeAppearanceOverlay="@style/Shape.Rounded.Medium">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/pad_card">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="More"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="18sp"
                    android:paddingBottom="@dimen/space_2"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Notifications • Language • etc"
                    android:textColor="?attr/colorOnSurface"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>
