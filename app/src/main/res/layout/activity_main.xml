<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/pad_screen">

        <!-- Logo -->
        <ImageView
            android:id="@+id/iv_Logo"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:contentDescription="@string/app_name"
            app:srcCompat="@drawable/chronosync_logo" />

        <!-- Greeting -->
        <TextView
            android:id="@+id/tv_Greeting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_0"
            android:text="We keep time... together"
            android:textAlignment="center"
            android:textColor="?attr/colorOnBackground"
            android:textSize="28sp"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold" />

        <!-- Login -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLogin"
            style="@style/Widget.Material3.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_8"
            android:minHeight="@dimen/touch_target"
            app:cornerRadius="@dimen/radius_m"
            android:text="Log in"
            app:backgroundTint="?attr/colorPrimary"
            android:textColor="?attr/colorOnPrimary" />

        <!-- Register -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSignUp"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_3"
            android:minHeight="@dimen/touch_target"
            app:cornerRadius="@dimen/radius_m"
            android:text="Register"
            app:strokeColor="?attr/colorOutline"
            app:strokeWidth="1dp"
            app:backgroundTint="?attr/colorSurface"
            android:textColor="?attr/colorOnSurface" />

        <!-- Google Login -->
        <LinearLayout
            android:id="@+id/btnGoogleLogin"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="@dimen/space_6"
            android:background="@drawable/google_button_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/space_3"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_google_logo"
                android:contentDescription="Google Logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_3"
                android:text="Continue with Google"
                android:textColor="?attr/colorOnBackground"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <!-- Google Sign Up -->
        <LinearLayout
            android:id="@+id/btnGoogleSignUp"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="@dimen/space_2"
            android:background="@drawable/google_button_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/space_3"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_google_logo"
                android:contentDescription="Google Logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_3"
                android:text="Sign Up with Google"
                android:textColor="?attr/colorOnBackground"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
