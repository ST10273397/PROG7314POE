<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Titles -->
    <style name="Text.Title">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <!-- Body -->
    <style name="Text.Body">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <!-- Button -->
    <style name="Widget.Prog.Button" parent="Widget.Material3.Button">
        <item name="android:minHeight">@dimen/touch_target</item>
        <item name="cornerRadius">@dimen/radius_m</item>
    </style>

    <!-- TextInput (Material) -->
    <style name="Widget.Prog.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">@dimen/radius_m</item>
        <item name="boxCornerRadiusTopEnd">@dimen/radius_m</item>
        <item name="boxCornerRadiusBottomStart">@dimen/radius_m</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/radius_m</item>
    </style>

    <!-- Card -->
    <style name="Widget.Prog.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">@dimen/radius_l</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <!-- Base rounded shape (alias used by some views) -->
    <style name="Shape.Rounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/radius_m</item>
    </style>

    <!-- Base text (alias used by legacy layouts) -->
    <style name="Text">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <!-- Base shape alias so legacy refs to @style/Shape resolve -->
    <style name="Shape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/radius_m</item>
    </style>



</resources>
